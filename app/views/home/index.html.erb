<% if flash[:notice] %>
  <div class="bg-green-100 text-green-800 p-4 rounded-md">
    <%= flash[:notice] %>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="bg-red-100 text-red-800 p-4 rounded-md">
    <%= flash[:alert] %>
  </div>
<% end %>

<div class="relative h-screen bg-cover bg-center" style="background-image: url(<%= image_url('stress_top1.webp') %>);">
  <div class="absolute top-10 right-0 m-auto w-full sm:w-3/4 lg:w-2/4 xl:w-1/3 flex flex-col items-center justify-start gap-4 p-5 sm:p-10">
    <h2 class="text-xl sm:text-2xl md:text-3xl font-bold mb-2"><%= t('home.index.recommended_stress_relief') %></h2>
    <p class="text-xl sm:text-2xl md:text-3xl font-bold mb-5"><%= t('home.index.record_effect') %></p>
    <p class="text-xl sm:text-2xl mb-4"><%= t('home.index.new_life_step') %></p>
    <p class="text-xl sm:text-2xl mb-10"><%= t('home.index.start_here') %></p>
    <% if user_signed_in? %>
      <div class="flex space-x-4">
        <%= link_to t('home.index.view_stress_reliefs'), stress_reliefs_path, class: "py-1 sm:py-2 px-3 sm:px-4 bg-sky-500 text-white rounded hover:bg-sky-400" %>
      </div>
    <% else %>
      <div class="flex space-x-4">
        <%= link_to t('defaults.login'), new_user_session_path, class: "py-1 sm:py-2 px-3 sm:px-4 bg-sky-500 text-white rounded hover:bg-sky-400" %>
        <%= link_to t('defaults.sign_up'), new_user_registration_path, class: "py-1 sm:py-2 px-3 sm:px-4 bg-emerald-500 text-white rounded hover:bg-emerald-400" %>
      </div>
    <% end %>
  </div>
</div>

