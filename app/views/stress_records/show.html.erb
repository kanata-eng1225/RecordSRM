<div class="mx-auto md:w-2/3 w-full px-4">
  <div class="mx-auto">
    <div class="flex justify-between items-center mt-4">
      <h1 class="font-bold text-4xl"><%= t('stress_records.show.title') %></h1>
      <div class="flex items-center">
        <%= link_to t('defaults.edit'), edit_stress_record_path(@stress_record), class: "rounded-lg py-3 px-5 bg-emerald-600 hover:bg-emerald-500 inline-block text-white font-medium mr-2" %>
        <%= link_to t('defaults.destroy'), stress_record_path(@stress_record), data: { turbo_method: 'delete', turbo_confirm: t('defaults.delete_message') }, class: "rounded-lg py-3 px-5 bg-red-500 hover:bg-red-400 text-white font-medium" %>
      </div>
    </div>
    
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <div class="text-center mt-4">
      <%= button_to t('stress_records.show.share_as_recommendation'), set_session_stress_record_path(@stress_record), method: :post, class: "bg-blue-800 hover:bg-blue-700 text-white py-2 px-5 rounded-lg transition duration-300" %>
    </div>

    <%= render @stress_record %>
  </div>
</div>
