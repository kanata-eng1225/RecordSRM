<div id="<%= dom_id stress_record %>" class="max-w-3xl mx-auto">
  <div class="my-5">
    <strong class="block font-medium mb-1"><%= t('activerecord.attributes.stress_record.stress_relief_date') %></strong>
    <p class="border border-gray-400 bg-gray-200 rounded-md p-2 w-40"><%= stress_record.stress_relief_date.to_date %></p>
  </div>

  <div class="my-5">
    <strong class="block font-medium mb-1"><%= t('activerecord.attributes.stress_record.title') %></strong>
    <div class="border border-gray-400 bg-gray-200 rounded-md p-2 max-w-full break-words mb-10 min-h-[40px] overflow-y-auto">
      <%= simple_format stress_record.title %>
    </div>
  </div>

  <div class="my-5">
    <strong class="block font-medium mb-1"><%= t('activerecord.attributes.stress_record.detail') %></strong>
    <div class="border border-gray-400 bg-gray-200 rounded-md p-2 max-w-full break-words mb-10 min-h-[100px] overflow-y-auto">
      <%= simple_format stress_record.detail %>
    </div>
  </div>

  <div class="my-5 text-center font-bold mb-10">
    <%= t('stress_records.form.perform_stress_relief') %>
  </div>

  <div class="my-5 flex flex-col md:flex-row justify-between mb-8">
    <div class="relative w-full md:w-1/3 mb-4 md:mb-0 md:mr-4 md:ml-14 text-red-500">
      <label class="block text-center mb-10 text-lg"><%= t('stress_records.stress_slider.before_stress_level') %></label>
      <div class="text-center mb-4 border border-gray-400 bg-gray-200 rounded-md h-10 flex items-center justify-center">
        <span class="text-red-500"><%= stress_record.before_stress_level %></span>
      </div>
      <input type="range" min="<%= StressRecord::STRESS_LEVEL_MIN %>" max="<%= StressRecord::STRESS_LEVEL_MAX %>" value="<%= stress_record.before_stress_level %>" class="range range-error w-full mb-4" step="<%= StressRecord::STRESS_LEVEL_STEP %>" disabled>
      <div class="w-full flex justify-between px-2 items-center">
        <span class="flex-shrink-0 text-xs" style="flex-basis: 35%; text-align: left;"><%= t('stress_records.stress_slider.no_stress') %></span>
        <span class="flex-shrink-0 text-xs" style="flex-basis: 35%; text-align: right;"><%= t('stress_records.stress_slider.extreme_stress') %></span>
      </div>
    </div>

    <div class="hidden md:flex flex-col justify-center items-center mx-2 my-4">
      <div class="text-6xl">➡︎</div>
    </div>
    <div class="md:hidden flex flex-col justify-center items-center mx-2 my-4">
      <div class="text-6xl">⬇︎</div>
    </div>

    <div class="relative w-full md:w-1/3 mt-4 md:mt-0 md:ml-4 md:mr-14 text-blue-500">
      <label class="block text-center mb-10 text-lg"><%= t('stress_records.stress_slider.after_stress_level') %></label>
      <div class="text-center mb-4 border border-gray-400 bg-gray-200 rounded-md h-10 flex items-center justify-center">
        <span class="text-blue-500"><%= stress_record.after_stress_level %></span>
      </div>
      <input type="range" min="<%= StressRecord::STRESS_LEVEL_MIN %>" max="<%= StressRecord::STRESS_LEVEL_MAX %>" value="<%= stress_record.after_stress_level %>" class="range range-info w-full mb-4" step="<%= StressRecord::STRESS_LEVEL_STEP %>" disabled>
      <div class="w-full flex justify-between px-2 items-center">
        <span class="flex-shrink-0 text-xs" style="flex-basis: 35%; text-align: left;"><%= t('stress_records.stress_slider.no_stress') %></span>
        <span class="flex-shrink-0 text-xs" style="flex-basis: 35%; text-align: right;"><%= t('stress_records.stress_slider.extreme_stress') %></span>
      </div>
    </div>
  </div>

  <div class="my-5">
    <strong class="block font-medium mb-1"><%= t('activerecord.attributes.stress_record.impression') %></strong>
    <div class="border border-gray-400 bg-gray-200 rounded-md p-2 max-w-full break-words min-h-[100px] overflow-y-auto">
      <%= simple_format stress_record.impression %>
    </div>
  </div>

  <div class="my-12 flex items-center justify-center">
    <input type="checkbox" <%= 'checked' if stress_record.performed %> disabled class="checkbox mr-2" />
    <strong class="font-medium"><%= t('activerecord.attributes.stress_record.performed') %></strong>
  </div>
</div>
