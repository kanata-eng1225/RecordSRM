<div class="relative w-1/3 <%= margin_class %>" data-controller="slider">
  <%= form.label label_symbol, label_text, class: "block text-center mb-4" %>
  <div class="text-center mb-4 border border-gray-400 bg-gray-200 rounded-md h-10 flex items-center justify-center">
    <span data-slider-target="output" class="<%= label_symbol == :before_stress_level ? 'text-red-500' : 'text-blue-500' %>"><%= stress_value %></span>
  </div>

  <%= form.range_field label_symbol, min: StressRecord::STRESS_LEVEL_MIN, max: StressRecord::STRESS_LEVEL_MAX, value: stress_value, class: "range #{label_symbol == :before_stress_level ? 'range-error' : 'range-info'} w-full", step: StressRecord::STRESS_LEVEL_STEP, data: { action: "input->slider#updateOutput", slider_target: "slider" } %>

  <div class="w-full flex justify-between px-2 mt-2" style="position: relative;">
    <span style="position: absolute; left: 0; transform: translateX(-50%); font-size: 0.7rem;"><%= t('stress_records.stress_slider.no_stress') %></span>
    <span style="position: absolute; right: 0; transform: translateX(50%); font-size: 0.7rem;"><%= t('stress_records.stress_slider.extreme_stress') %></span>
  </div>
</div>
