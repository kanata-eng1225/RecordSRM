<div class="w-full max-w-screen-xl mx-auto p-5 bg-gray-100">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl"><%= t('stress_reliefs.index.title') %></h1>
    <%= link_to t('stress_reliefs.index.new_stress_relief'), new_stress_relief_path, class: "rounded-lg py-3 px-5 bg-sky-500 hover:bg-sky-400 text-white block font-medium" %>
  </div>

  <div class="text-center mb-6">
    <input type="text" class="border rounded-md p-2 w-64" placeholder="調整中" disabled>
    <button class="bg-blue-500 text-white rounded-md px-4 py-2 ml-2" disabled>検索</button>
  </div>

  <div id="stress_reliefs" class="flex flex-wrap justify-between">
    <%= render @stress_reliefs %>
  </div>

  <div class="w-full text-center my-8">
    <%= paginate @stress_reliefs %>
  </div>
</div>
