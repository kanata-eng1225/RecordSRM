<div class="min-h-screen bg-gray-100 flex flex-wrap justify-center items-start pt-10">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block w-full text-center" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center w-full mb-4 px-4">
    <h1 class="font-bold text-4xl"><%= t('stress_reliefs.index.title') %></h1>
    <%= link_to t('stress_reliefs.index.new_stress_relief'), new_stress_relief_path, class: "rounded-lg py-3 px-5 bg-sky-500 hover:bg-sky-400 text-white block font-medium" %>
  </div>

  <div id="stress_reliefs" class="min-w-full flex flex-wrap justify-center">
    <%= render @stress_reliefs %>
  </div>
</div>
