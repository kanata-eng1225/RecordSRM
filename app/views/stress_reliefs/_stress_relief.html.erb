<div class="w-1/3 p-4">
  <div class="max-w-xs container bg-white rounded-xl transform transition duration-500 hover:scale-110 m-4">
    <%= link_to stress_relief do %>
      <div>
        <h1 class="text-2xl" style="word-wrap: break-word; overflow-wrap: break-word;"><%= stress_relief.title %></h1>
      </div>
      <img class="w-full h-48 object-cover" src="<%= asset_path "stress_relief_board#{stress_relief.difficulty}.jpg" %>" alt="Stress Relief Image" />
      <div class="flex p-4 justify-between">
        <div>
          <%= StressRelief.human_attribute_name(:difficulty) %>
          <%= render 'difficulty_stars', difficulty: stress_relief.difficulty %>
        </div>
        <div class="ml-4 mt-1 mb-2">
          <div><%= StressRelief.human_attribute_name(:tag_names) %></div>
          <div style="word-break: break-all;"><%= stress_relief.tag_names.join(', ') %></div>
        </div>
      </div>
      <div class="flex p-4 justify-start">
        <div class="mr-4 flex items-center text-pink-500">
          <%= render 'like_icon_outline' %>
          <span><%= stress_relief.likes.count %></span>
        </div>
        <div class="ml-auto" style="word-wrap: break-word; overflow-wrap: break-word; max-width: 90%; min-width: 0;">
          <h2><%= stress_relief.user.name %></h2>
        </div>
      </div>
    <% end %>
  </div>
</div>
