<% if current_user %>
  <% if @stress_relief.liked_by?(@stress_relief.likes, current_user.id) %>
    <%= link_to stress_relief_like_path(@stress_relief, @stress_relief.user_like(current_user)), class: "text-pink-500 hover:text-pink-300 transition duration-100 cursor-pointer mr-2 flex items-center", data: { turbo_method: "delete" } do %>
      <%= render 'like_icon_filled' %>
      <span><%= @stress_relief.likes.size %></span>
    <% end %>
  <% else %>
    <%= link_to stress_relief_likes_path(@stress_relief), class: "text-pink-500 hover:text-pink-300 transition duration-100 cursor-pointer mr-2 flex items-center", data: { turbo_method: "post" } do %>
      <%= render 'like_icon_outline' %>
      <span><%= @stress_relief.likes.size %></span>
    <% end %>
  <% end %>
<% else %>
  <%= link_to new_user_session_path, class: "text-pink-500 hover:text-pink-300 transition duration-100 cursor-pointer mr-2 flex items-center" do %>
    <%= render 'like_icon_outline' %>
    <span><%= @stress_relief.likes.size %></span>
  <% end %>
<% end %>
