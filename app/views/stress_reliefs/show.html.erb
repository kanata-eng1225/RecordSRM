<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <div class="max-w-2xl container bg-white rounded-xl shadow-lg m-4">
      <div>
        <h1 class="text-2xl mt-2 ml-4 font-bold text-gray-800 cursor-pointer hover:text-gray-900 transition duration-100"><%= @stress_relief.title %></h1>
        <div class="ml-4 mt-1 mb-2 text-gray-700">
          <strong class="text-gray-800">詳細:</strong> <%= @stress_relief.detail %>
        </div>
      </div>
      <img class="w-full h-96 object-cover cursor-pointer" src="<%= asset_path "stress_relief_board#{@stress_relief.difficulty}.jpg" %>" alt="Stress Relief Image" />
      <div class="flex p-4 justify-between">
        <div class="text-gray-700 font-bold">
          難易度
          <%= render 'difficulty_stars', difficulty: @stress_relief.difficulty %>
        </div>
        <div class="ml-4 mt-1 mb-2 text-gray-700">
          <div><strong class="text-gray-800">タグ</strong></div>
          <div><%= @stress_relief.tag_names.join(', ') %></div>
        </div>
      </div>
      <div class="flex p-4">
        <div class="flex items-center">
          <%= render 'like_link', stress_relief: @stress_relief %>
        </div>
        <h2 class="text-gray-800 font-bold cursor-pointer ml-auto"><%= @stress_relief.user.name %></h2>
      </div>
    </div>

    <% if current_user == @stress_relief.user %>
      <%= link_to 'Edit this stress_relief', edit_stress_relief_path(@stress_relief), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <div class="inline-block ml-2">
        <%= button_to 'Destroy this stress_relief', stress_relief_path(@stress_relief), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
      </div>
    <% end %>
  </div>
</div>
